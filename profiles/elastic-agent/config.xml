          <value>gocd/gocd-agent-alpine-3.9:v20.3.0</value>
        </property>
      </agentProfile>
      <agentProfile id="DinD-Agent" clusterProfileId="local-docker-cluster">
        <property>
          <key>Image</key>
          <value>gocd/gocd-agent-docker-dind:v20.3.0</value>
        </property>
