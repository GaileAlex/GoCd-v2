        </property>
      </agentProfile>
    </agentProfiles>
    <clusterProfiles>
      <clusterProfile id="local-docker-cluster" pluginId="cd.go.contrib.elastic-agent.docker">
        <property>
          <key>enable_private_registry_authentication</key>
          <value>false</value>
        </property>
        <property>
